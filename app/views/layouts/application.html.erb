<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>

  <%= stylesheet_link_tag    "bootstrap", media: "all", "data-turbolinks-track" => true %>

  <%= javascript_include_tag :defaults %>

  <%= csrf_meta_tags %>
</head>
<body>
  <body id="store" >
  <div id="banner" >
  <%= image_tag("Orange.png") %>
  <%= @page_title || "Idea Hub" %>
  </div>

    <div id="cart" >
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart" ) do %>
        <%= render @cart %>
        <% end %>
      <% end %>
    </div>

  <div id="main" >
  	<p> <% if user_signed_in?%>
  			<%= 'Welcome, ' %>	<%= link_to( current_user.first_name + ' ' + current_user.last_name, user_path(current_user.id), class:"btn btn-default btn-xs")%>      |      <%= link_to('Sign Out', destroy_user_session_path, method: :delete, class:"btn btn-default btn-xs")%>
<%= 'Your Current Points: ' %><span class="badge badge-success"><%= link_to( current_user.rewards, products_path) %></span>
  		<% else%>

  			<%= link_to('Sign In', new_user_session_path, class:"btn btn-default btn-xs")%>
  		<%end%>

  <%= link_to 'New User', new_user_path, class:"btn btn-default btn-xs" %><br />

	<%= link_to( 'Home',root_path, class:"btn btn-default btn-xs")%><br>
	<p> <% if user_signed_in?%>
			<%= link_to "Sign out", destroy_user_session_path, :method => :delete, class:"btn btn-default btn-xs"%><br>
		<% else%>
			<%= link_to('Sign In', new_user_session_path, class:"btn btn-default btn-xs")%> <br>
		<%end%>
  <%= link_to 'Members List', users_path, class:"btn btn-default btn-xs" %><br />
  <%= link_to 'Projects', projects_path, class:"btn btn-default btn-xs" %><br />
  <%= link_to 'Store', products_path, class:"btn btn-default btn-xs" %><br />
  </div>

  </body>
</html>
