<!DOCTYPE html>
<html>
<head>
  <title>Store</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag :defaults %>

  <%= csrf_meta_tags %>
</head>
<body>
  <body id="store" >
  <div id="banner" >
  <%= image_tag("Orange.png") %>
  <%= @page_title || "Idea Hub" %>
  </div>
  <div id="columns" >
  <div id="side" >
    <div id="cart" >
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => "cart" ) do %>
        <%= render @cart %>
        <% end %>
      <% end %>
    </div>

  <%= link_to 'New User', new_user_path %><br />
  <%= link_to( 'Sign in', new_user_session_path ) %><br />
  <%= link_to 'Store', products_path %><br />

	<%= link_to( 'Home',root_path, class:"btn btn-default btn-xs")%><br>
	<p> <% if user_signed_in?%>
			<%= link_to "Sign out", destroy_user_session_path, :method => :delete, class:"btn btn-default btn-xs"%><br>
		<% else%>
			<%= link_to('Sign In', new_user_session_path, class:"btn btn-default btn-xs")%> <br>
		<%end%>
  <%= link_to 'Members List', users_path, class:"btn btn-default btn-xs" %><br />
  <%= link_to 'Projects', projects_path, class:"btn btn-default btn-xs" %><br />
  <%= link_to 'Store', products_path, class:"btn btn-default btn-xs" %><br />

  </div>
  <div id="main" >
  <%= yield %>
  </div>
 </div>
  </body>
</html>

