<h1><%= @project.title%></h1>

<table class="table table-bordered">
	<tr><th colspan="2"><%= link_to( @project.user.first_name + ' ' + @project.user.last_name, user_path(current_user.id), class:"btn btn-default btn-xs")%></th><tr>
		<tr><td>Timeframe: <%= @project.time_frame%></td><td>Status: <%= @project.status%></td></tr>
<tr><td  colspan="2">	<%= @project.description%></td></tr>
</table>

<hr>
<h3>Comments</h3>

<div id="comments-list">
<table class="table table-bordered">
		<tr><td><%= render @project.comments %></td></tr>
</table>
</div>

<% if user_signed_in? %>
	<h3>Add a comment:</h3>
	<div id="comments-form">
		<%= render "comments/form" %>
	</div>
<% end %>

<%= @project.user.first_name%> <%= @project.user.last_name%>
